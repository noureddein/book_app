<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('layout/head',{pageTitle: 'Favorite' }) %>
</head>

<body>
  <%- include('layout/nav') %>
    <main>
      <h4>My Book Collection</h4>
      <p>You have <%= booksQty %> books</p>
      <div class="conainer">
        <% searchResults.forEach(book=> { %>
          <div class="books">
            <img src="<%= book.image_url %>" alt="<%= book.title %>">
            <h3>
              <%= book.title%>
            </h3>
            <h5> <strong>Author: </strong>
              <%= book.author %>
            </h5>
            <button style="background-color: yellow;">View Details</button>

            <form action="/delete/<%= book.id %>?_method=delete" method="post">
              <input type="hidden" name="image_url" value="<%- book.image_url%>">
              <input type="hidden" name="isbn" value="<%- book.isbn %>">
              <input type="hidden" name="title" value="<%- book.title %>">
              <input type="hidden" name="author" value="<%- book.author %>">
              <input type="hidden" name="description" value="<%-book.description %>">
              <button> Delete This Book </button>
            </form>

            <form action="/update/<%= book.id %>?_method=put" method="post">
              <input type="hidden" name="image_url" value="<%- book.image_url%>">
              <input type="hidden" name="isbn" value="<%- book.isbn %>">
              <input type="hidden" name="title" value="<%- book.title %>">
              <input type="hidden" name="author" value="<%- book.author %>">
              <input type="hidden" name="description" value="<%-book.description %>">
              <button> Edit Book Info </button>
            </form>


          </div>
          <% }) %>
      </div>
    </main>
</body>

</html>